{% if cart.item_count > 0 %}

  <h1>cart</h1>
  <form action="/cart" method="post" novalidate>

    
<section class="cart-area section">
  <div class="cart shopping">
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-2">
          <div class="block">
            <div class="product-list">
              <form method="post">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Item Name</th>
                      <th>Quantity</th>
                      <th>Item Price</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for item in cart.items %}
                    <tr>
                      <td>
                        <div class="product-info">
                          <img width="80" src="{{ item | img_url: '' }}" alt="{{ item.title | escape }}">
                          <a href="{{ item.url | within: collections.all }}">{{ item.product.title }}</a>
                        </div>
                      </td>
                      <td class="cart_qty"><input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0"></td>
                      <td>{{ item.line_price | money }}</td>
                      <td>
                        <a class="product-remove" href="/cart/change?line={{ forloop.index }}&amp;quantity=0">Remove</a>
                      </td>
                    </tr>
                    {% endfor %}

                  </tbody>
                </table>
                <div class="row justify-content-end cart-total">
                  <div class="col-md-2">
                    Total
                  </div>
                  <div class="col-md-2">
                    {{ cart.total_price | money }}
                  </div>
                </div>
                <button type="submit" name="checkout" class="btn btn-main pull-right learn-more">Checkout</button>
                <button type="submit" name="update" id="update-btn" class="btn shop-now btn-transparent pull-right">Update</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


    <table>
      <thead>
        <th colspan="2">Prod</th>
        <th>Price</th>
        <th>Qty</th>
        <th>total</th>
      </thead>
      <tbody>
        {% for item in cart.items %}
          <tr>
            <td>
              <a href="{{ item.url | within: collections.all }}">
                <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
              </a>
            </td>
            <td>
              <a href="{{ item.url }}">{{ item.product.title }}</a>
              {{ item.variant.title }}
              <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">remove</a>
            </td>
            <td>{{ item.price | money }}</td>
            <td>
              <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0">
            </td>
            <td>
              {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
              {{ item.line_price | money }}
              {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <div>
      <p>sub total : {{ cart.total_price | money }}</p>
      <button type="submit" name="update">Update</button>
      <button type="submit" name="checkout">Checkout</button>
    </div>
  </form>
{% else %}
  <h2>cart</h2>
  Cart is empty
{% endif %}
