<style>
  .diy-img-size{
    max-width: 100%;
    height: 335px;
    object-fit: cover;
  }

</style>
<!--Start Main Body Code -->
<div class="pest-experts-blog-section">
  <div class="container">
    <div style="padding-bottom: 40px;">
      <div class="row">
        {% for block in section.blocks %}
        <div class="col-md-4">
          <div class="pest-experts-blog-feature text-center">
            <a href="{{ block.settings.diy_item_url }}"><img src="{{ block.settings.diy_item_image | img_url: '' }}" class="img-fluid diy-img-size" alt=""></a>
          </div>
          <!--End Col-6-->
        </div>
        {% endfor %}
      </div>
      <!--End Row-->
    </div>

  </div>
</div>
  <!--End Main Body Code-->

  {% schema %}
{
    "name": "Ask Expert Grid",
    "settings":[
    ],
    "blocks": [
        {
            "name": "Ask Expert Grid Add",
            "type": "slideshow",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "diy_item_image",
                    "label": "diy Item Image"
                },
                {
                    "type": "url",
                    "id": "diy_item_url",
                    "label": "diy Link"
                }

            ]
        }
    ],
    "presets": [
      {
        "name": "Ask Expert Grid",
        "blocks": [
          {
            "type": "slideshow"
          }
        ]
      }
    ]
}
{% endschema %}