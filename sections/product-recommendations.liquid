<!-- top selling product -->
<div class="top-selling">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-8">
                <div class="sec-title">
                    <h2>{{ section.settings.related_product_slider_section_title }}</h2>
                </div>
            </div>
        </div>
        <!-- tab menu -->

        <!-- tabs -->
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-12">
                <div class="tab-content product-list" id="pills-tabContent">
                    <!-- tab panel -->

                    <div class="tab-pane fade show active" id="pills-1">
                        <div class="owl-carousel owl-theme product-carousel">
                            <!-- item -->
                            {% for product in collections[section.settings.related_product_collection].products %}
                            <div class="item">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <img src="{{ product.featured_image.src | img_url: '' }}" class="img-fluid"
                                            alt="">
                                        <a href="{{ product.url }}">
                                            <h5>{{ product.title | truncate: 65 }}</h5>
                                        </a>
                                        <p>{{ product.price | money }}</p>
                                        <form method="post" action="/cart/add">
                                            <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
                                            <input min="1" type="number" id="quantity" hidden name="quantity"
                                                value="1" />
                                            <input type="submit" value="Add to cart" class="btn shop-now" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {% endfor%}
                            <!-- item -->
                        </div>
                    </div>
                    <!-- tab panel -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- top selling product -->



{% schema %}
{
    "settings": [
        {
            "type": "text",
            "id": "related_product_slider_section_title",
            "label": "Product Section Title",
            "default": "Related Products"
        },
        {
            "type": "collection",
            "id": "related_product_collection",
            "label": "Products"
        }
    ],
    "presets": [
      {
        "name": "Related Product"
      }
    ]
}

{% endschema %}

