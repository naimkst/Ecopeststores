        .col.gird-main-item-service {
            box-shadow: hsl(221deg 87% 43%) 0px 4px 12px !important;
            margin: 15px;
            padding: 15px;
        }
    
        .col.gird-main-item-service ul li:first-child {
            border-bottom: 1px solid #C2B0B0;
        }
    
        .gird-main-item-service ul li img {
            width: 30px;
            height: 27px;
        }
    
        .gird-main-item-service ul li a {
            color: inherit;
        }
    
        .service-item-x-title {
            padding-left: 30px;
            padding-right: 30px;
        }
    
        .service-item-x-title h3 {
            border-bottom: 1px solid #C2B0B0;
        }
    
        .margin-bottom-10px {
            margin-bottom: 10px;
        }
    
    
        .margin-bottom-30px {
            margin-bottom: 30px;
        }
    
        .paddint-item ul li {
            margin-bottom: 15px;
        }
        .service-item.shop-by-pests{
