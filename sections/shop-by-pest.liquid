                        {% assign collection = block.settings.shop_by_pest_collection %}
                            <li>
                                <a href="{{ collection.url }}">
                                    {% if block.settings.shop_by_pest_image %}
                                        <img src="{{ block.settings.shop_by_pest_image | img_url: '' }}" alt="">
                                    {% else %}
                                        {% if collection.featured_image.src %}
                                            <img src="{{ collection.featured_image.src | img_url: '' }}" alt="">
                                        {% endif %}
                                    {% endif %}
                                    {% if block.settings.shop_by_pest_title %} {{ block.settings.shop_by_pest_title }} {% else %} {{ collection.title }} {% endif %} 
