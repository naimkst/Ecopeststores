                    <div style="background: url({{ section.settings.residential_fst_bg_img | img_url: '' }});background-repeat: no-repeat; background-size: cover;" class="bubble-bg-color">
                        <h2 class="text-center buble-main-title" >{{ section.settings.residential_main_title }}</h2>
                    </div>
                </a>
            </div>
            <div class="col-md-4 nopadding bg-hover">
                <a href="{{ section.settings.commercial_url }}">
                <div style="background: url('{{ section.settings.residential_scnd_bg_img | img_url: '' }}');background-repeat: no-repeat;
                background-size: cover;"
                    class="bubble-bg-color">
                    <h2 class="text-center buble-main-title" >{{ section.settings.commercial_main_title }}</h2>
                </div>
                
                </a>
            </div>
            <div class="col-md-4 nopadding bg-hover">
