<style>
    .bubble-bg-color {
        padding: 30px;
        min-height: 330px;
    }

    .bubble-img {
        width: 120px;
        height: 120px;
        border-radius: 100%;
        ;
    }

    .bubble-bg-color {
        position: relative;
        display: flex;
        justify-content: space-around;
    }

    .bubble-bg-color:after {
        background: #1c3d72;
        position: absolute;
        z-index: 0;
        content: "";
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        opacity: 0.5;
    }

    .bubble-grib {
        z-index: 1;
        position: relative;
        display: inline-block;
    }

    .bubble-img {
        transition: 0.3s;
        position: relative;
    }

    .bubble-grib:hover .bubble-img {
        transition: 0.3s;
        width: 180px;
        height: 180px;
    }

    .hover-bble {
        overflow: hidden;
        position: relative;
        border-radius: 50%;
        z-index: -1;
    }

    .hover-bble:hover .bubble-one:after {
        width: 100%;
        height: 100%;
        background: #fff;
        transition: 0.3s;
        content: "";
        top: 0;
        left: 0;
        position: absolute;
        opacity: 0.8;
        z-index: 1;

    }

    .hove-text {
        position: absolute;
        top: 32%;
        text-align: center;
        max-width: 150px;
        z-index: 2;
        left: 11%;
        display: none;
        transition: 0.3s;
    }

    .hover-bble:hover .hove-text {
        display: block;
        transition: 0.3s;
    }

    .hove-text p {
        font-size: 15px;
        margin-bottom: 10px;
        color: #1c3d72;
        line-height: 1.4;
    }

    .hove-text a {
        font-size: 15px;
        margin-bottom: 10px;
        color: #f43739;
        font-weight: 600;
    }

    .bubble-two {
        margin-top: 15%;
    }

    .buble-main-title {
        position: absolute;
        bottom: 45%;
        font-size: 35px;
        color: #fff;
        z-index: 1;
    }
    .service-item-grid h2 {
        height: 30px;
    }
    
    .col.gird-main-item-service {
            padding: 25px 15px 15px 15px;
            margin-right: 15px;
            margin-left: 15px;
            border-radius: 5px;box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
        }


