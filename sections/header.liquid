    "default": true,
    "label": "Sign In Hide & Show"
    },
    {
    "type": "url",
    "id": "sing_in",
    "label": "Sign In Link"
    },
    {
    "type": "image_picker",
    "id": "sign_in_image",
    "label": "Sign In Image"
    },
    {
    "type": "checkbox",
    "id": "cart_hide_show",
    "default": true,
    "label": "Cart Hide & Show"
    },
    {
    "type": "image_picker",
    "id": "Cart_image",
    "label": "Cart Icon"
    },
    {
    "type": "checkbox",
    "id": "chat_hide_show",
    "default": true,
    "label": "Chat Image Hide & Show"
    },
    {
    "type": "image_picker",
    "id": "chat_image",
    "label": "Chat Icon"
    },
    {
    "type": "checkbox",
    "id": "video_hide_show",
    "default": true,
    "label": "Video Hide & Show"
    },
    {
    "type": "image_picker",
    "id": "video_image",
    "label": "Video Icon"
    },
    {
    "type": "image_picker",
    "id": "right_menu_image",
    "label": "Right Menu Icon"
    },
    {
    "type": "text",
    "id": "header_video",
    "label": "Header Video Link",
    "default": "https://www.youtube.com/watch?v=jssO8-5qmag&ab_channel=HighResolutionDatabase"
    },
    {
    "type": "link_list",
    "id": "main_menu",
    "label": "Main menu"
    },
    {
    "type": "link_list",
    "id": "know_more_menu",
    "label": "Know More menu"
    },
    {
    "type": "header",
    "content": "Management Section"
    },
    {
      "type": "checkbox",
      "id": "top_header_hide_show",
      "default": true,
      "label": "Top Header Hide & Show"
    }

  ],
  "blocks": [
     {
       "name": "Top Slider",
       "type": "slide",
       "settings": [
         {
           "type": "text",
           "id": "top_slider",
           "label": "Top Slider",
           "default": "Free Shipping on All Orders $45+"
         }
       ]
     }
   ]
}
{% endschema %}
