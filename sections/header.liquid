<header class="header">
    <style>
        .search-section {
            position: absolute;
            z-index: 999;
            background: #fff;
            width: 100%;
            padding: 25px;
        }
    
        .thumbnail {
            display: inline-block;
            max-width: 30%;
            float: left;
        }
    
        .title {
            display: inline-block;
            max-width: 70%;
            margin-left: 10px;
        }
    
        ul.search-result li {
            padding: 12px 0px;
            border-bottom: 1px solid #f3f3f3;
            display: flow-root;
        }
    
        ul.search-result li:last-child {
            padding: 12px 0px;
            border-bottom: 0px solid #f3f3f3;
        }
    
        li.all-result {
            background: #f13a33;
            padding: 18px 0px !important;
            text-align: center;
            font-size: 18px;
            color: #fff !important;
            display: list-item;
            margin-top: 20px;
        }
    
        li.all-result a {
            color: #fff !important;
        }
    
        .title p {
            margin-top: 6px;
            font-size: 12px;
            color: #e73236;
        }
        .search-section{
           display: none;
        }
        ::-webkit-input-placeholder{
            color: #1C3D72;
        }
        .search-section {
            max-height: 500px;
            overflow: scroll;
        }
    </style>

    {% if section.settings.top_header_hide_show != false %}
    <!-- top bar -->
    <div class="top-bar">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="owl-carousel owl-theme topbar-carousel">
                        <!-- item -->
                        {% for block in section.blocks %}
                        <div class="item">
                            <p>{{ block.settings.top_slider }}</p>
                        </div>
                        {% endfor %}
                        <!-- /item -->

                    </div>
                </div>
            </div>
        </div><!-- /container -->
        <!-- language -->
        <div class="lang">
            <div class="dropdown">
                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src="{{ 'ca.png' | asset_url }}" class="img-fluid" alt="">
                    CA
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">
                        <img src="{{ 'ca.png' | asset_url }}" class="img-fluid" alt="">
                        CA
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    <!-- middle -->
    <div class="middle-header">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-3 col-md-4 col-sm-6 mb-xl-0 mb-3">
                    <!-- logo -->
                    {% if section.settings.logo != blank %}
                    <a href="/" class="logo">
                        <img src="{{ section.settings.logo | img_url: '' }}" class="img-fluid" alt="">
                    </a>
                    {% else %}
                    <a href="/" class="logo">
                        <img src="{{ 'logo.png' | asset_url }}" class="img-fluid" alt="">
                    </a>
                    {% endif %}
                </div>
                <div class="col-xl-1 col-md-2 col-sm-3 mb-xl-0 mb-3">
                    <div class="logo-2">
                        <img src="{{ section.settings.logo_right_image | img_url: '' }}" class="img-fluid" alt="">
                    </div>
                </div>
                <div class="col-xl-4 col-md-10 mb-xl-0 mb-4">
                    <form action="/search" method="get" role="search" class="search-bar">
                        <input type="search" id="search-box" name="q" value="{{ search.terms | escape }}" class="form-control typewrite form-control"  onkeyup="ajaxSearch()" data-period="2000" data-type='[ "Ecopeststore", "Ants", "Bed Bugs", "Wasps & Bees", "Spiders", "Mice", "Rats", "Voles", "Moles", "Cockroaches", "Sow Bugs", "Tree & Garden"]'>
                        <button type="submit" class="btn search-btn"><i class="fa fa-search"></i>
                            <span>search</span></button>
                    </form>

                    <div class="search-section">
                        <div class="search-loading"></div>
                        <ul class="search-result predictive-search-results">
                          
                            <!-- <li class="all-result">
                                <a href="">
                                    View All Results (72)
                                </a>
                            </li> -->
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-10">
                    <ul class="middle-header-right">
                        {% if section.settings.sign_in_hide_show != false %}
                        <li>
                            <a href="{{ section.settings.sing_in }}" class="signin-card">
                                <img src="{{ section.settings.sign_in_image | img_url: '' }}" class="img-fluid" alt="">
                                Sign In
                            </a>
                        </li>
                        {% endif %}

                        {% if section.settings.cart_hide_show != false %}
                        <li>
                            <a href="/cart" class="cart-card">
                                <span class="cart-number">{{ cart.item_count }}</span>
                                <img src="{{ section.settings.Cart_image | img_url: '' }}" class="img-fluid" alt="">
                                Cart
                            </a>
                        </li>
                        {% endif %}

                        {% if section.settings.chat_hide_show != false %}
                        <li>
                            <a href="#" class="chat-card">
                                <img src="{{ section.settings.chat_image | img_url: '' }}" class="img-fluid" alt="">
                            </a>
                        </li>
                        {% endif %}

                        {% if section.settings.video_hide_show != false %}
                        <li>
                            <a data-fancybox href="{{ section.settings.header_video }}" class="video-card">
                                <img src="{{ section.settings.video_image | img_url: '' }}" class="img-fluid" alt="">
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- middle -->
    <!-- Navigation bar -->

    <div class="navigation-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <ul class="menu">

                        {% for link in linklists[section.settings.main_menu].links %}

                        {% if link.links == blank %}
                         <li class="menu-item"><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endif %}

                        {% if link.links != blank %}
                        <li class="menu-item is_megamenu"><a href="{{ link.url }}">{{ link.title }}</a></li>
                        <div class="mega-menu ">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            {% for childlink in link.links %}
                                                <div class="col-lg-2 mt-lg-0">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <h4>{{ childlink.title }}</h4>
                                                            <ul class="mega_cat">
                                                                {% for sublink in childlink.links %}
                                                                <li class="menu-items"><a href="{{ sublink.url }}">{{
                                                                        sublink.title }}</a></li>
                                                                {% endfor %}
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        {% endfor %}
                    </ul>
                </div>
                   
    <div class="mega-menu2 know-more mega-menu-show">
        <style>
            .know-more .menu-card {
                position: relative;
                margin-bottom: 20px;
            }
            .know-more .menu-card:after {
                position: absolute;
                content: '';
                width: 100%;
                height: 100%;
                top: 0;
                left: 0;
                background: rgba(0,0,0, .2);
            }
            .know-more .menu-card h5 {
                position:absolute;
                left: 0;
                right: 0;
                text-align: center;
                top: 50%;
                transform: translateY(-50%);
                z-index: 1;
                margin: 0;
                font-size: 22px;
                font-weight: 500;
                text-transform: capitalize;
            }
            .know-more {
                background: #FFFFFF;
            }
            .know-more li a {
                color: #000;
                font-size: 16px;
            }
            .know-more h4 {
                color: #1C3D72;
            }
            .know-more .more-menu-width {
                width: 80%;
                margin: 0 auto;
            }

        </style>
        <div class="container">
            <div class="row">
                <div class="more-menu-width">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-12 mt-lg-0 mt-4">
                                <div class="row">

                                    {% for link in linklists[section.settings.know_more_menu].links %}
                                    {% if link.lists == blank %}
                                    {% if forloop.index == 1 %}
                                        <div class="col-3">
                                            <h4>{{ link.title }}</h4>
                                            <ul>
                                                {% for childlink in link.links %}
                                                <li class="menu-item"><a href="{{ childlink.url }}">{{ childlink.title }} »</a></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                    {% if forloop.index == 2 %}
                                        <div class="col-3">
                                            <h4>{{ link.title }}</h4>
                                            <ul>
                                                {% for childlink in link.links %}
                                                <li class="menu-item"><a href="{{ childlink.url }}">{{ childlink.title }} »</a></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                    {% if forloop.index == 3 %}
                                        <div class="col-3">
                                            <h4>{{ link.title }}</h4>
                                            <ul>
                                                {% for childlink in link.links %}
                                                <li class="menu-item"><a href="{{ childlink.url }}">{{ childlink.title }} »</a></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                    {% if forloop.index == 4 %}
                                    <div class="col-3">
                                        <h4>{{ link.title }}</h4>
                                        <ul>
                                            {% for childlink in link.links %}
                                            <li class="menu-item"><a href="{{ childlink.url }}">{{ childlink.title }} »</a></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
        
                                    {% endif %}
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

                <div class="col-lg-4">
                    <div class="dropdown">
                        <button class="btn know-more-btn dropdown-toggle right-menu-toggole" type="button" id="dropdownMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span>
                                Know More!
                                <span>Learn & Support</span>
                            </span>
                            <img src="{{ section.settings.right_menu_image | img_url: '' }}" class="img-fluid" alt="">
                        </button>
                        <div hidden class="dropdown-menu show" aria-labelledby="dropdownMenuButton">
                            {% for link in linklists[section.settings.know_more_menu].links %}
                            {% if link.lists == blank %}
                            <a class="dropdown-item" href="{{ link.url }}">{{ link.title }}</a>
                            {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
</header>

