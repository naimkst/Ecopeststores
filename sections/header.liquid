    "label": "Sign In Link"
    },
    {
    "type": "image_picker",
    "id": "sign_in_image",
    "label": "Sign In Image"
    },
    {
    "type": "checkbox",
    "id": "cart_hide_show",
    "default": true,
    "label": "Cart Hide & Show"
    },
    {
    "type": "image_picker",
    "id": "Cart_image",
    "label": "Cart Icon"
    },
    {
    "type": "checkbox",
    "id": "chat_hide_show",
    "default": true,
    "label": "Chat Image Hide & Show"
    },
    {
    "type": "image_picker",
    "id": "chat_image",
    "label": "Chat Icon"
    },
    {
    "type": "checkbox",
    "id": "video_hide_show",
    "default": true,
    "label": "Video Hide & Show"
    },
    {
    "type": "image_picker",
    "id": "video_image",
    "label": "Video Icon"
