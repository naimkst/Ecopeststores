                           <div class="col-md-6">
                             <input type="email" class="form-control" placeholder="Post">
                           </div> <!-- end col-md-6 -->
                       </div> <!-- End Form Row -->
   
                       <div class="form-group">
                           <input type="text" class="form-control" placeholder="Pest">
                       </div> <!-- end form-group -->
   
                       <div class="form-group">
                           <textarea class="form-control" rows="5"></textarea>
                       </div> <!-- end form-group -->
                       <button type="submit" class="btn btn-danger">SEND</button>
                   </form> <!-- end form -->
   
                  </div> <!-- end section box -->
   
   
              </div> <!-- end col-md- 4 -->
   
