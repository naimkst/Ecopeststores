   }
   
   .pro-contact-box{
       width: 100%;
       height: auto;
       padding: 15px 15px 15px 15px;
       background: #FFFFFF;
       box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.25);
   }
   
   .pro-contact-box h3{
       border-bottom: 1px solid #C2B0B0;
   }
   
   .pro-contact-box ul li {
       margin-bottom: 5px;
   }
   
   .pro-contact-box ul li a {
       color: black;
       font-size: 16px;
       font-weight: bold;
   }
   
   .pro-contact-box .fa-phone {
       background: red;
       color: white;
       border-radius: 50px;
       width: 30px;
       height: 30px;
       text-align: center;
       padding: 7px;
   }
   
   .pro-contact-box .fa-envelope {
       background: red;
       color: white;
       border-radius: 50px;
       width: 30px;
       height: 30px;
       text-align: center;
       padding: 7px;
   }
   
   .pro-contact-box .fa-map-marker {
       background: red;
       color: white;
       border-radius: 50px;
       width: 30px;
       height: 30px;
       text-align: center;
       padding: 7px;
   }
   
   .pro-form-box .form-control {
       background: #EEEEEE;
       border: 0px;
   }
